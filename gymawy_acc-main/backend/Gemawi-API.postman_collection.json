{
  "info": {
    "name": "Gemawi Accounting API",
    "description": "Complete API collection for Gemawi Accounting System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gemawi.com\",\n  \"password\": \"Admin123!\",\n  \"name\": \"Super Admin\",\n  \"role\": \"super_admin\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gemawi.com\",\n  \"password\": \"Admin123!\"\n}"
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/employees"
          }
        },
        {
          "name": "Create Employee",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/employees",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"أحمد محمد\",\n  \"email\": \"ahmed@gemawi.com\",\n  \"position\": \"محاسب\",\n  \"salary\": 5000,\n  \"salaryCurrency\": \"SAR\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Payroll",
      "item": [
        {
          "name": "Get All Payroll",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/payroll"
          }
        },
        {
          "name": "Create Payroll",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/payroll",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"EMPLOYEE_ID\",\n  \"month\": 1,\n  \"year\": 2025,\n  \"baseSalary\": 5000,\n  \"bonuses\": 500,\n  \"deductions\": 200,\n  \"netSalary\": 5300,\n  \"currency\": \"SAR\"\n}"
            }
          }
        }
      ]
    }
  ]
}
